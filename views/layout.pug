doctype html
html(ng-app='mongodb-gis')
  head
    title Comem+ GeoInf 2016 MongoDB GIS

    // Third-party stylesheets.
    link(rel='stylesheet', href='/vendor/bootstrap.min.css')
    link(rel='stylesheet', href='/vendor/bootstrap-theme.min.css')
    link(rel='stylesheet', href='/vendor/loading-bar.min.css')
    link(rel='stylesheet', href='/vendor/ol.css', type='text/css')

    // Application stylesheets.
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    block content

    // Third-party libraries.
    script(src='/vendor/lodash.min.js')
    script(src='/vendor/bluebird.min.js')
    script(src='/vendor/jquery-3.1.1.slim.min.js')
    script(src='/vendor/angular.min.js')
    script(src='/vendor/angular-animate.min.js')
    script(src='/vendor/ui-bootstrap-tpls.min.js')
    script(src='/vendor/loading-bar.min.js')
    script(src='/vendor/ol.js')

    // Angular application.
    script(src='/javascripts/app.js')
    script(src='/javascripts/exercises.js')
    script(src='/javascripts/geo.js')
    script(src='/javascripts/map.js')
    script(src='/javascripts/utils.js')

    // Dynamically include exercise scripts (generated by server).
    if exercises
      each exercise in exercises
        script(src='/javascripts/exercises/' + exercise)
